<h1>Number List</h1>

<table class="table table-striped table">
  <thead>
    <tr>
      <th>Name</th>
      <th>1st Phone Number</th>
      <th>2nd Phone Number</th>
      <th>3rd Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @numbers.each do |number| %>
      <tr>
        <td><%= number.name %></td>
        <td><%= number.phone1 %></td>
        <td><%= number.phone2 %></td>
        <td><%= number.phone3 %></td>
        <td><%= link_to "Show", number, class:"btn btn-success" %></td>
        <td><%= link_to "Edit", edit_number_path(number), class:"btn btn-warning" %></td>
        <td><%= link_to "Delete", number, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete #{number.name}?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>